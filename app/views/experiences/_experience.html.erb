<div class="row-fluid borBox well deep experience" style="position:relative;">
  <div class="span1 vote">
    <%= render :partial => 'experiences/inline_vote_form', :locals => {:experience => experience, :vote => :up} %>
    <div><span class="count"><%= experience.votes_point %></span></div>
    <%= render :partial => 'experiences/inline_vote_form', :locals => {:experience => experience, :vote => :down} %>
  </div>
  <div class="span4">
    <ul class="thumbnails">
      <li class="span4">
        <a href='<%= experience.url %>' class="thumbnail" target='_blank'>
          <%= image_tag experience.image %>
        </a>

        <div style="text-align: center; margin-top: 10px;">
        <span style="">
          <span class='st_facebook_large' displayText='Facebook'></span>
          <span class='st_twitter_large' displayText='Tweet'></span>
          <span class='st_email_large' displayText='Email'></span>
          <span class='st_sharethis_large' displayText='ShareThis'></span>

          <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
          <script type="text/javascript">stLight.options({publisher:"2a8bfbf8-e506-4c99-bd55-c67e8461c2e0"}); </script>
        </span>
        </div>
      </li>
    </ul>
  </div>
  <div class="span7">
    <div class="">
      <%= link_to experience.url, :class => 'inverse', :style => '', :target => '_blank' do %>
        <h1><%= experience.title %></h1>
      <% end %>
    </div>
    <div>
      <%= raw experience.description %>
    </div>
    <div class="reviews borBox well trans">
      <%= render experience.reviews %>
    </div>
  </div>
  <% if can_edit?(experience) %>
    <%= link_to "Edit", edit_experience_path(experience), :class => ['btn', 'edit'], :style => "position:absolute; top: 12px; right:10px;" %>
  <% end %>
</div>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $(function () {
      $('a.edit').hide();
      $('.experience').hover(function () {
        $(this).children('a.edit').show();
      }, function () {
        $(this).children('a.edit').hide();
      });
    });
  </script>
<% end %>