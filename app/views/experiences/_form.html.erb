<%= simple_form_for(@experience, :html => {:class => 'form-horizontal'}) do |form| %>
  <%= form.error_notification %>
  <div class="form-inputs">
    <%= form.input :image %>
    <%= form.input :title, :input_html => { :class => 'span8' } %>
    <%= form.input :url, :input_html => { :class => 'span8' } %>
    <%= form.input :description, :as => :text, :input_html => { :class => 'span8' } %>
  </div>
  <div class='form-actions'>
    <%= form.button :submit, :class => 'btn-primary' %>
    <%= link_to "Back", root_path, :class=>"btn" %>
  </div>
<% end %>

<script type="text/javascript">
    $('textarea').wysihtml5();
</script>